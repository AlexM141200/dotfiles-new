{
  "title": "Window Management with Option + Arrows",
  "rules": [
    {
      "description": "Move window using Option + Arrow Keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/move_fullscreen.sh"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/move_left.sh"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/move_right.sh"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "shell_command": "~/.config/karabiner/scripts/minimize.sh"
            }
          ]
        }
      ]
    }
  ]
}
